/* 新增的AI分析相关样式 */
.analysis-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
}

.analyze-btn {
  background-color: #1890ff;
  color: white;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.analyze-btn.disabled {
  background-color: #ccc;
  color: #666;
}

/* 赛季项选中状态 */
.season-item.selected {
  background-color: #f0f8ff;
  border: 2rpx solid #1890ff;
}

.season-selector {
  margin-right: 20rpx;
}

/* 分析结果样式 */
.analysis-result {
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #1890ff;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
}

.clear-btn {
  background-color: #ff4d4f;
  color: white;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  border: none;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

/* 分析历史样式 */
.analysis-history {
  margin-top: 40rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-radius: 8rpx;
  border: 1rpx solid #e8e8e8;
}

.history-info {
  flex: 1;
}

.history-time {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.history-seasons {
  font-size: 26rpx;
  color: #333;
}

.history-actions {
  display: flex;
  gap: 15rpx;
}

.history-btn {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  border: none;
}

.history-btn.view {
  background-color: #1890ff;
  color: white;
}

.history-btn.delete {
  background-color: #ff4d4f;
  color: white;
}

/* 原有的其他样式保持不变 */