/* 新增的CSS样式 */
.edit-mode {
  width: 100%;
}

.edit-input {
  border: 1px solid #1677ff;
  padding: 0rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-bottom: 0rpx;
  width: 100%;
  box-sizing: border-box;
}

.edit-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 5px;
}

.edit-btn {
  flex: 1;
  padding: 15rpx;
  font-size: 26rpx;
  border-radius: 6rpx;
  border: none;
}

.edit-btn.save {
  background-color: #1677ff;
