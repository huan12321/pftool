.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.input-group input {
  flex: 1;
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.create-btn {
  background-color: #1677ff;
  color: white;
  padding: 20rpx;
  font-size: 30rpx;
}

.seasons-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.season-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.season-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.season-name {
  font-size: 30rpx;
  font-weight: bold;
}

.season-detail {
  font-size: 24rpx;
  color: #666;
}

.season-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 2rpx 5rpx;
  font-size: 20rpx;
  width: 60rpx !important;
  text-align: center;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 4rpx;
}

.set-current {
  background-color: #e6f4ff;
  color: #1677ff;
  border: 1px solid #1677ff;
}

.delete {
  background-color: #fff2f2;
  color: #f53f3f;
  border: 1px solid #f53f3f;
}

.export {
  background-color: #fff2f2;
  color: #07c160;
  border: 1px solid #07c160;
}

/* 增加选择器特异性，确保样式生效 */
.season-actions button.action-btn.set-current{
  width: 120rpx !important;
}

/* 增加选择器特异性，确保样式生效 */
.season-actions button.action-btn.delete {
  width: 60rpx !important;
}


.empty-hint {
  text-align: center;
  padding: 50rpx;
  color: #999;
  font-size: 30rpx;
}


.season-details {
  margin-top: 10rpx;
}

.season-id {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  margin-bottom: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-hint {
  font-size: 20rpx;
  color: #1677ff;
}

.season-detail {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.action-btn.set-current.active {
  background-color: #07c160;
  color: white;
}


/* 导入区域 */
.import-section {
  margin: 30rpx 0;
  text-align: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.import-btn {
  background-color: #1890ff;
  color: white;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  margin-bottom: 15rpx;
}

.import-hint {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 赛季统计信息 */
.season-stats {
  margin-top: 10rpx;
  padding: 8rpx 12rpx;
  background-color: #f0f8ff;
  border-radius: 6rpx;
  border-left: 4rpx solid #1890ff;
}

.stats-text {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
}

