.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.data-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}

.operation-buttons {
  display: flex;
  gap: 20rpx;
}

.operation-btn {
  flex: 1;
  padding: 20rpx;
  font-size: 30rpx;
  color: white;
}

.export {
  background-color: #1677ff;
}

.import {
  background-color: #07c160;
}

.tips {
  padding: 20rpx;
  background-color: #fff8e6;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #8c6a03;
}

.tip-item {
  margin-bottom: 10rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}
