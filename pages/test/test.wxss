.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.test-section {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.test-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.picker-view {
  padding: 20rpx;
  background-color: white;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 30rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.value-display {
  font-size: 24rpx;
  color: #666;
  padding: 10rpx 0;
}

.picker-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 20rpx;
}
