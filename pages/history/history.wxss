
/* 时间范围选择器样式 */
.time-range-selector {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx 0;
  background: white;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.time-range-label {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.time-range-picker-container {
  flex: 1;
}

.time-range-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.time-range-picker .arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

.data-count {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}


.container {
  padding: 20rpx;
}

.season-selector {
  margin-bottom: 20rpx;
}

.picker-view {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 模式切换器 - 确保三个按钮可见 */
.view-mode-switcher {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.mode-buttons {
  display: flex;
  gap: 8rpx;
  width: 100%;
}

.mode-btn {
  flex: 1;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  white-space: nowrap;
  line-height: 1.2;
  min-height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.mode-btn.active {
  background-color: #1677ff;
  color: white;
  border-color: #1677ff;
}

.export-btn {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  background-color: #52c41a;
  color: white;
  border: none;
  border-radius: 8rpx;
  white-space: nowrap;
  align-self: flex-end;
  min-height: 70rpx;
}

/* 图表容器样式 */
.chart-container {
  background: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  /* 移除 overflow: auto，让图表正常显示 */
}

.chart-wrapper {
  width: 100%;
  overflow: hidden; /* 防止内容溢出 */
}

.canvas-container {
  width: 100%;
  height: 350rpx; /* 增加高度确保完整显示 */
  position: relative;
  display: flex;
  justify-content: center; /* 居中显示 */
  align-items: center;
}

.score-chart {
  width: 100%; /* 确保canvas宽度100% */
  height: 350rpx;
  display: block;
}

.chart-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 连胜连败列表样式 */
.history-list {
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.list-header {
  display: flex;
  background-color: #f5f5f5;
  border-bottom: 1px solid #eee;
}

.header-item {
  padding: 15rpx;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
}

.time {
  flex: 4;
}

.score {
  flex: 1;
}

.streak {
  flex: 2;
}

.action {
  flex: 2;
}

.record-item {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 15rpx;
  font-size: 28rpx;
}

.record-item:last-child {
  border-bottom: none;
}

.record-field {
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.win {
  color: #07c160;
  font-weight: bold;
}

.lose {
  color: #f53f3f;
  font-weight: bold;
}

/* 分时段统计样式 */
.hourly-stats {
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.stats-header {
  display: flex;
  background-color: #f5f5f5;
  border-bottom: 1px solid #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.stats-column {
  padding: 15rpx;
  text-align: center;
}

.time-slot {
  flex: 3;
}

.total {
  flex: 1;
}

.win {
  flex: 1;
}

.lose {
  flex: 1;
}

.stats-item {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 15rpx;
  font-size: 26rpx;
}

.stats-item:last-child {
  border-bottom: none;
}

.stats-field {
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.win-rate {
  color: #07c160;
  font-weight: bold;
}

.lose-rate {
  color: #f53f3f;
  font-weight: bold;
}

.empty-hint {
  text-align: center;
  padding: 50rpx;
  color: #999;
  font-size: 30rpx;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.dialog-container {
  background-color: white;
  border-radius: 10rpx;
  width: 80%;
  max-width: 500rpx;
}

.dialog-title {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.dialog-content {
  padding: 30rpx;
}

.dialog-info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.dialog-input input {
  width: 100%;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.dialog-buttons {
  display: flex;
  border-top: 1px solid #eee;
}

.dialog-btn {
  flex: 1;
  padding: 20rpx;
  font-size: 30rpx;
}

.cancel {
  background-color: #f5f5f5;
  color: #333;
}

.confirm {
  background-color: #1677ff;
  color: white;
}

.edit-btn {
  padding: 2rpx 2rpx;
  font-size: 20rpx;
  background-color: #e6f4ff;
  color: #1677ff;
  border: 1px solid #1677ff;
  width: 60rpx !important;
}

.delete-btn {
  padding: 2rpx 2rpx;
  font-size: 20rpx;
  background-color: #fff2f2;
  color: #f53f3f;
  border: 1px solid #f53f3f;
  width: 60rpx !important;
}

/* 增加选择器特异性 */
.record-field.action button.edit-btn,
.record-field.action button.delete-btn {
  width: 60rpx !important;
}

/* 按钮容器样式，使按钮并排显示 */
.record-field.action {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx; /* 按钮之间的间距 */
}

/* 按钮样式调整 */
.edit-btn, .delete-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  height: 40rpx; /* 按钮高度 */
  line-height: 40rpx; /* 文字垂直居中 */
  border-radius: 4rpx; /* 圆角 */
}

/* 统计概览样式 - 透明底色 */
.stats-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 0 15rpx;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 400;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-periods {
  font-size: 20rpx;
  color: #999;
  line-height: 1.3;
}

.stat-periods text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 2rpx 0;
}

/* 为不同统计项添加特色颜色 */
.stat-item:nth-child(1) .stat-value {
  color: #1677ff; /* 蓝色表示平均 */
}

.stat-item:nth-child(2) .stat-value {
  color: #52c41a; /* 绿色表示最高 */
}

.stat-item:nth-child(3) .stat-value {
  color: #fa8c16; /* 橙色表示最低 */
}

/* 简约图标 */
.stat-item:nth-child(1) .stat-label::before {
  content: '● ';
  color: #1677ff;
  font-size: 20rpx;
}

.stat-item:nth-child(2) .stat-label::before {
  content: '● ';
  color: #52c41a;
  font-size: 20rpx;
}

.stat-item:nth-child(3) .stat-label::before {
  content: '● ';
  color: #fa8c16;
  font-size: 20rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .stats-overview {
    padding: 25rpx 20rpx;
  }
  
  .stat-item {
    padding: 0 10rpx;
  }
  
  .stat-value {
    font-size: 28rpx;
  }
  
  .stat-periods {
    font-size: 18rpx;
  }
}

/* 调整表格列宽以适应移除败率列 */
.stats-header {
  display: flex;
  background-color: rgba(245, 245, 245, 0.8);
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.8);
  font-weight: bold;
  font-size: 28rpx;
}

.stats-column.time-slot {
  flex: 4;
}

.stats-column.total {
  flex: 2;
}

.stats-column.win {
  flex: 2;
}

.stats-field.time-slot {
  flex: 4;
}

.stats-field.total {
  flex: 2;
}

.stats-field.win {
  flex: 2;
}

/* 微交互效果 */
.stats-overview {
  transition: all 0.3s ease;
}

.stats-overview:active {
  transform: scale(0.995);
  background: rgba(255, 255, 255, 0.95);
}